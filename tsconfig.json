{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "declarationDir": "./lib",
    "outDir": "./lib",
    "lib": [
      "dom",
      "es2017.object",
      "es7"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "jsx",
    "__tests__"
  ]
}
